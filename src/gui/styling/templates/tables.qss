/* Column View */
QColumnView {
    background-color: {background_primary};
    color: {text_primary};
    border: 1px solid {border};
    border-radius: 8px;
}

QColumnView::item:hover {
    background-color: {background_hover};
}

QColumnView::item:selected {
    background-color: {primary};
    color: {background_primary};
}

/* Table Styling Variants */
QTableWidget[class="table-striped"] {
    alternate-background-color: {background_secondary};
}

QTableWidget[class="table-hover"]::item:hover {
    background-color: {background_hover};
}

QTableWidget[class="table-compact"]::item {
    padding: 4px 8px;
}

/* List Styling Variants */
QListWidget[class="list-compact"]::item {
    padding: 6px 10px;
}

QListWidget[class="list-bordered"]::item {
    border: 1px solid {border};
    margin: 2px 0;
}
