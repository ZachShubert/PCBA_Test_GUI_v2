/* Combo Box */
QComboBox {
    background-color: {background_primary};
    color: {text_primary};
    border: 1px solid {border};
    border-radius: 6px;
    padding: 8px 8px;
    font-size: 13px;
    min-height: 20px;
}

QComboBox:hover {
    border-color: {text_tertiary};
}

QComboBox:focus {
    border-color: {border_focus};
    border-width: 2px;
    padding: 8px 8px;
}

QComboBox:disabled {
    background-color: {background_secondary};
    color: {text_tertiary};
    border-color: {border};
}

QComboBox::drop-down {
    border: none;
    width: 30px;
}

QComboBox::down-arrow {
    image: url(data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTIiIGhlaWdodD0iMTIiIHZpZXdCb3g9IjAgMCAxMiAxMiIgZmlsbD0ibm9uZSIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj4KICA8cGF0aCBkPSJNMyA1TDYgOEw5IDUiIHN0cm9rZT0iIzY0NzQ4YiIgc3Ryb2tlLXdpZHRoPSIxLjUiIHN0cm9rZS1saW5lY2FwPSJyb3VuZCIgc3Ryb2tlLWxpbmVqb2luPSJyb3VuZCIvPgo8L3N2Zz4=);
    width: 12px;
    height: 12px;
}

QComboBox QAbstractItemView {
    background-color: {background_primary};
    border: 1px solid {border};
    border-radius: 6px;
    padding: 4px;
    selection-background-color: {background_hover};
    selection-color: {text_primary};
    outline: none;
}

QComboBox QAbstractItemView::item {
    padding: 6px 12px;
    border-radius: 4px;
}

QComboBox QAbstractItemView::item:hover {
    background-color: {background_hover};
}

/* Spin Box */
QSpinBox, QDoubleSpinBox {
    background-color: {background_primary};
    color: {text_primary};
    border: 1px solid {border};
    border-radius: 6px;
    padding: 8px 12px;
    font-size: 13px;
}

QSpinBox:hover, QDoubleSpinBox:hover {
    border-color: {text_tertiary};
}

QSpinBox:focus, QDoubleSpinBox:focus {
    border-color: {border_focus};
    border-width: 2px;
    padding: 7px 11px;
}

QSpinBox:disabled, QDoubleSpinBox:disabled {
    background-color: {background_secondary};
    color: {text_tertiary};
    border-color: {border};
}

QSpinBox::up-button, QDoubleSpinBox::up-button {
    subcontrol-origin: border;
    subcontrol-position: top right;
    width: 20px;
    border-left: 1px solid {border};
    border-top-right-radius: 6px;
    background-color: {background_secondary};
}

QSpinBox::up-button:hover, QDoubleSpinBox::up-button:hover {
    background-color: {background_hover};
}

QSpinBox::down-button, QDoubleSpinBox::down-button {
    subcontrol-origin: border;
    subcontrol-position: bottom right;
    width: 20px;
    border-left: 1px solid {border};
    border-bottom-right-radius: 6px;
    background-color: {background_secondary};
}

QSpinBox::down-button:hover, QDoubleSpinBox::down-button:hover {
    background-color: {background_hover};
}

QSpinBox::up-arrow, QDoubleSpinBox::up-arrow {
    image: url(data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTAiIGhlaWdodD0iMTAiIHZpZXdCb3g9IjAgMCAxMCAxMCIgZmlsbD0ibm9uZSIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj4KICA8cGF0aCBkPSJNMiA3TDUgNEw4IDciIHN0cm9rZT0iIzY0NzQ4YiIgc3Ryb2tlLXdpZHRoPSIxLjUiIHN0cm9rZS1saW5lY2FwPSJyb3VuZCIgc3Ryb2tlLWxpbmVqb2luPSJyb3VuZCIvPgo8L3N2Zz4=);
    width: 10px;
    height: 10px;
}

QSpinBox::down-arrow, QDoubleSpinBox::down-arrow {
    image: url(data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTAiIGhlaWdodD0iMTAiIHZpZXdCb3g9IjAgMCAxMCAxMCIgZmlsbD0ibm9uZSIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj4KICA8cGF0aCBkPSJNMiAzTDUgNkw4IDMiIHN0cm9rZT0iIzY0NzQ4YiIgc3Ryb2tlLXdpZHRoPSIxLjUiIHN0cm9rZS1saW5lY2FwPSJyb3VuZCIgc3Ryb2tlLWxpbmVqb2luPSJyb3VuZCIvPgo8L3N2Zz4=);
