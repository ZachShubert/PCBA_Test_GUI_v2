/* ============================================
   INPUTS - Text fields, combo boxes, spinners
   ============================================ */

/* Line Edit */
QLineEdit {
    background-color: {background_primary};
    color: {text_primary};
    border: 1px solid {border};
    border-radius: 6px;
    padding: 8px 12px;
    font-size: 13px;
}

QLineEdit:hover {
    border-color: {text_tertiary};
}

QLineEdit:focus {
    border-color: {border_focus};
    border-width: 2px;
    padding: 7px 11px;
}

QLineEdit:disabled {
    background-color: {background_secondary};
    color: {text_tertiary};
    border-color: {border};
}

QLineEdit[class="input-search"] {
    padding-left: 36px;
    background-image: url(data:image/svg+xml;base64,);
    background-repeat: no-repeat;
    background-position: 12px center;
}

QLineEdit[class="input-error"] {
    border-color: {error};
}

QLineEdit[class="input-success"] {
    border-color: {success};
}

