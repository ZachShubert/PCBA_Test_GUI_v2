QTreeWidget::branch:open:has-children:!has-siblings,
QTreeWidget::branch:open:has-children:has-siblings,
QTreeView::branch:open:has-children:!has-siblings,
QTreeView::branch:open:has-children:has-siblings {
    image: url(data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTIiIGhlaWdodD0iMTIiIHZpZXdCb3g9IjAgMCAxMiAxMiIgZmlsbD0ibm9uZSIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj4KICA8cGF0aCBkPSJNMyA0TDYgOEw5IDQiIHN0cm9rZT0iIzY0NzQ4YiIgc3Ryb2tlLXdpZHRoPSIxLjUiIHN0cm9rZS1saW5lY2FwPSJyb3VuZCIgc3Ryb2tlLWxpbmVqb2luPSJyb3VuZCIvPgo8L3N2Zz4=);
}

/* Column View */
QColumnView {
    background-color: #0f172a;
    color: #f8fafc;
    border: 1px solid #334155;
    border-radius: 8px;
}

QColumnView::item:hover {
    background-color: #475569;
}

QColumnView::item:selected {
    background-color: #3b82f6;
    color: #0f172a;
}

/* Table Styling Variants */
QTableWidget[class="table-striped"] {
    alternate-background-color: #1e293b;
}

QTableWidget[class="table-hover"]::item:hover {
    background-color: #475569;
}

QTableWidget[class="table-compact"]::item {
    padding: 4px 8px;
}

/* List Styling Variants */
QListWidget[class="list-compact"]::item {
    padding: 6px 10px;
}

QListWidget[class="list-bordered"]::item {
    border: 1px solid #334155;
    margin: 2px 0;
}


/* ============================================
   LABELS - Text display and status indicators
   ============================================ */

/* Base Label */
QLabel {
    color: #f8fafc;
    background-color: transparent;
    font-size: 14px;
}

/* Heading Labels */
QLabel[class="heading-1"] {
    font-size: 28px;
    font-weight: bold;
    color: #f8fafc;
}

QLabel[class="heading-2"] {
    font-size: 24px;
    font-weight: bold;
    color: #f8fafc;
}

QLabel[class="heading-3"] {
    font-size: 20px;
    font-weight: bold;
    color: #f8fafc;
}

QLabel[class="heading-4"] {
    font-size: 16px;
    font-weight: bold;
    color: #f8fafc;
}

QLabel[class="heading-5"] {
    font-size: 14px;
    font-weight: bold;
    color: #f8fafc;
}

/* Text Variants */
QLabel[class="text-primary"] {
    color: #f8fafc;
}

QLabel[class="text-secondary"] {
    color: #cbd5e1;
}

QLabel[class="text-tertiary"] {
    color: #64748b;
}

QLabel[class="text-muted"] {
    color: #64748b;
    font-size: 12px;
}

QLabel[class="text-small"] {
    font-size: 11px;
}

QLabel[class="text-large"] {
    font-size: 15px;
}

QLabel[class="text-bold"] {
    font-weight: bold;
}

QLabel[class="text-mono"] {
    font-family: "Consolas", "Monaco", "Courier New", monospace;
}

/* Accent Colors */
QLabel[class="text-accent-primary"] {
    color: #3b82f6;
}

QLabel[class="text-accent-secondary"] {
    color: #06b6d4;
}

QLabel[class="text-success"] {
    color: #22c55e;
}

QLabel[class="text-warning"] {
    color: #f59e0b;
}

QLabel[class="text-error"] {
    color: #ef4444;
}

QLabel[class="text-info"] {
    color: #06b6d4;
}

/* Badge Labels */
QLabel[class="badge"] {
    background-color: #334155;
    color: #f8fafc;
    border-radius: 12px;
    padding: 4px 12px;
    font-size: 11px;
    font-weight: bold;
}

QLabel[class="badge-primary"] {
    background-color: #3b82f6;
    color: #0f172a;
    border-radius: 12px;
    padding: 4px 12px;
    font-size: 11px;
    font-weight: bold;
}

QLabel[class="badge-secondary"] {
    background-color: #06b6d4;
    color: #0f172a;
    border-radius: 12px;
    padding: 4px 12px;
    font-size: 11px;
    font-weight: bold;
}

QLabel[class="badge-success"] {
    background-color: rgba(34, 197, 94, 0.15);
    color: #22c55e;
    border-radius: 12px;
    padding: 4px 12px;
    font-size: 11px;
    font-weight: bold;
}

QLabel[class="badge-warning"] {
    background-color: rgba(245, 158, 11, 0.15);
    color: #f59e0b;
    border-radius: 12px;
    padding: 4px 12px;
    font-size: 11px;
    font-weight: bold;
}

QLabel[class="badge-error"] {
    background-color: rgba(239, 68, 68, 0.15);
    color: #ef4444;
    border-radius: 12px;
    padding: 4px 12px;
    font-size: 11px;
    font-weight: bold;
}

QLabel[class="badge-info"] {
    background-color: rgba(6, 182, 212, 0.15);
    color: #06b6d4;
    border-radius: 12px;
    padding: 4px 12px;
    font-size: 11px;
    font-weight: bold;
}

/* Pill/Tag Labels */
QLabel[class="pill"] {
    background-color: #334155;
    color: #f8fafc;
    border-radius: 16px;
    padding: 6px 14px;
    font-size: 12px;
    font-weight: 600;
}

QLabel[class="pill-outline"] {
    background-color: transparent;
    color: #f8fafc;
    border: 2px solid #334155;
    border-radius: 16px;
    padding: 4px 12px;
    font-size: 12px;
    font-weight: 600;
}

/* Status Indicators */
QLabel[class="status-online"] {
    color: #22c55e;
    font-weight: bold;
}

QLabel[class="status-offline"] {
    color: #64748b;
    font-weight: bold;
}

QLabel[class="status-busy"] {
    color: #ef4444;
    font-weight: bold;
}

QLabel[class="status-away"] {
    color: #f59e0b;
    font-weight: bold;
}

/* Icon Labels */
QLabel[class="icon"] {
    font-size: 20px;
    color: #f8fafc;
}

QLabel[class="icon-sm"] {
    font-size: 16px;
    color: #f8fafc;
}

QLabel[class="icon-lg"] {
    font-size: 28px;
    color: #f8fafc;
}

QLabel[class="icon-primary"] {
    color: #3b82f6;
}

QLabel[class="icon-secondary"] {
    color: #06b6d4;
}

QLabel[class="icon-success"] {
    color: #22c55e;
}

QLabel[class="icon-warning"] {
    color: #f59e0b;
}

QLabel[class="icon-error"] {
    color: #ef4444;
}

QLabel[class="icon-info"] {
    color: #06b6d4;
}

/* Code/Monospace Labels */
QLabel[class="code"] {
    font-family: "Consolas", "Monaco", "Courier New", monospace;
    background-color: #334155;
    color: #f8fafc;
    padding: 2px 6px;
    border-radius: 4px;
    font-size: 12px;
}

/* Link-style Labels */
QLabel[class="link"] {
    color: #3b82f6;
    text-decoration: underline;
}

QLabel[class="link"]:hover {
    color: #06b6d4;
}

/* Card Title */
QLabel[class="card-title"] {
    font-size: 16px;
    font-weight: bold;
    color: #f8fafc;
    padding-bottom: 8px;
}

QLabel[class="card-subtitle"] {
    font-size: 13px;
    color: #cbd5e1;
    padding-bottom: 4px;
}

/* Section Headers */
QLabel[class="section-header"] {
    font-size: 11px;
    font-weight: bold;
    color: #64748b;
    text-transform: uppercase;
    letter-spacing: 1px;
    padding: 8px 0 4px 0;
}

/* Status Dots for Footer */
QLabel[class="status-dot-active"] {
    background-color: #22c55e;
    border-radius: 3px;
    min-width: 6px;
    max-width: 6px;
    min-height: 6px;
    max-height: 6px;
}

QLabel[class="status-dot-inactive"] {
    background-color: #64748b;
    border-radius: 3px;
    min-width: 6px;
    max-width: 6px;
    min-height: 6px;
    max-height: 6px;
}


